/* pages/home/home.wxss */

.search-wrapper {
  background-color: #42BD55;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  margin-bottom: 30rpx;
}

.search {
  background-color: #fff;
  border-radius: 15rpx;
  height: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-wrapper image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.title-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 30rpx;
  margin-bottom: 40rpx;
}

.title-wrapper .title {
  color: #494949;
  font-weight: bold;
  font-size: 32rpx;
}

.title-wrapper .more {
  color: #0DB019;
  display: flex;
  align-items: center;
}

.title-wrapper .arrow {
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #0DB019;
  border-top: none;
  border-left: none;
  transform: rotate(-45deg);
}

.items {
  /* display: flex;
  overflow-x: auto;
  padding-left: 30rpx;
  padding-right: 30rpx; */
  white-space: nowrap;
}

.items .item {
  /* margin: 0 15rpx; */

  /* display: inline-block; */
  display: inline-flex;
  flex-direction: column;
  margin-left: 30rpx;
  /* margin-right: 30rpx; */
  width: 210rpx;
}

.items .item:last-of-type {
  margin-right: 30rpx;
}

.item .photo {
  width: 100%;
  height: 274rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
}

.item .title {
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  /* 超出宽度直接隐藏 */
  overflow: hidden;
  /* 超出范围显示省略号 */
  text-overflow: ellipsis;
}

.score {
  display: flex;
  align-items: center;
  color: #818181;
}

.score .stars {
  display: flex;
  margin-right: 4rpx;
}

.stars .star {
  width: 32rpx;
  height: 32rpx;
}