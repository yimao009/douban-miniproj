/* pages/profile/profile.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.login-wrapper {
    height: 400rpx;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
}

.login-wrapper .login {
  color: #1E4826;
  font-size: 45rpx;
  background-color: #fff;
  width: 350rpx;
  border-radius: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-shadow: 2rpx 2rpx 10rpx 0 rgb(131, 19, 19);
}

/* begin */
.items-wrapper {
  margin-top: 30rpx;
}

.title-wrapper {
  padding-left: 30rpx;
  padding-right: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-wrapper .title {
  font-weight: bold;
  font-size: 35rpx;
}

.title-wrapper .view {
  color: #838383;
  display: flex;
  align-items: center;
}

.items-wrapper .arrow {
  width: 20rpx;
  height: 20rpx;
  border: 4rpx solid #7F7F7F;
  border-top: none;
  border-left: none; 
  transform: rotate(-45deg);
  margin-left: 15rpx;
}

/* .item:last-of-type .divider {
  visibility: hidden;
  display: none;
} */

.item {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.item .icon {
  width: 108rpx;
  height: 108rpx;
  margin-right: 30rpx;
}  

.info-wrapper {
  /* width: 100%; */
  flex: 1;
  padding-right: 20rpx;
}

.info-wrapper .info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info .left .top {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.info .left .bottom {
  display: flex;
  color: #818181;
  align-items: baseline;
}

.info .count {
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.info .right {
  display: flex;
  align-items: center;
}

.info .right .text {
  color: #C1C1C1;
  margin-right: 20rpx;
}

.info .right .begin {
  color: #4a4a4a;
  background-color: #f5f5f5;
  padding: 10rpx 15rpx;
}

.item .divider {
  width: 100%;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
  margin-top: 10rpx;
}

.login-wrapper image {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.version {
    color: #c9c9c9;
    text-align: center;
    font-size: 24rpx;
    margin: 30rpx 0;
}