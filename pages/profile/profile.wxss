/* pages/profile/profile.wxss */
.login-wrapper {
    height: 400rpx;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
}

.login-wrapper image {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.login-wrapper .login {
    color: #1E4826;
    font-size: 45rpx;
    background-color: #fff;
    width: 350rpx;
    border-radius: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.version {
    position: absolute;
    bottom: 30rpx;
    color: #c9c9c9;
    width: 100%;
    text-align: center;
    font-size: 24rpx;
}