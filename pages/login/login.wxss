/* pages/login/login.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
}

.logo {
  width: 144rpx;
  height: 144rpx;
  margin: 50rpx 0;
}

.btn-login {
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  border-radius: 10rpx;
  height: 80rpx;
}

.wechat {
  background-color: #42BD55;
  color: #fff;
  margin-bottom: 20rpx;
}

.douban {
  background-color: #fff;
  color: #42BD55;
  border: 2rpx solid #42BD55;
}

.agreement {
  color: #9D9D9D;
  font-size: 20rpx;
  display: flex;
  position: absolute;
  bottom: 50rpx;
}

.open {
  color: #4BB65C;
  margin-left: 10rpx;
}